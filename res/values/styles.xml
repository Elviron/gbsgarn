<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/TitleTextStyle</item>
        <item name="android:background" tools:ignore="NewApi">@color/main_color</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/main_color</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_title</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/main_title</item>
    </style>

    <style name="PaddingSmall">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="PaddingLarge">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppName" parent="PaddingLarge">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">35sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Open" parent="PaddingSmall">
        <item name="android:textColor">#00AA00</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="Closed" parent="PaddingSmall">
        <item name="android:textColor">#DD0000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TodayHours" parent="PaddingSmall">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TomorrowHours" parent="PaddingSmall">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="LoginText">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
    </style>

</resources>