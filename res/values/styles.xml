<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PaddingSmall">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="PaddingLarge">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppName" parent="PaddingLarge">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">35sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Open" parent="PaddingSmall">
        <item name="android:textColor">#00AA00</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="Closed" parent="PaddingSmall">
        <item name="android:textColor">#DD0000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TodayHours" parent="PaddingSmall">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TomorrowHours" parent="PaddingSmall">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="LoginText" parent="PaddingSmall">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
    </style>

</resources>